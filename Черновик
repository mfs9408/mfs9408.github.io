function next() {
    let slider = document.querySelector("pic");
    num++;
    if(num>=images.length) {
        num=0;
    }
    slider.src=images[num];
}

function prev() {
    let slider = document.querySelector("pic");
    num--;
    if(num<0) {
        num=images.lenght-1;;
    }
    slider.src=images[num];
}

delayAutoplay: 5000, // интервал между автоматической сменой слайдов


